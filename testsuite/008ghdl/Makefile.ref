TOP_LIBRARY := work
TOP_MODULE := gate3

GHDL := ghdl
GHDL_OPT := -Wall

#target for performing local simulation
local: sim_pre_cmd simulation sim_post_cmd

VERILOG_SRC := 
VERILOG_OBJ := 
VHDL_SRC := ../files/gate.vhdl \
../files/gate3.vhd \

VHDL_OBJ := work/gate/.gate_vhdl \
work/gate3/.gate3_vhd \

LIBS := work
LIB_IND := work/.work

simulation: $(VERILOG_OBJ) $(VHDL_OBJ)
		$(GHDL) -e $(GHDL_OPT) $(TOP_LIBRARY).$(TOP_MODULE)


work/gate/.gate_vhdl: ../files/gate.vhdl
		$(GHDL) -a --work=work $(GHDL_OPT) $<
		@mkdir -p $(dir $@) && touch $@


work/gate3/.gate3_vhd: ../files/gate3.vhd \
work/gate/.gate_vhdl
		$(GHDL) -a --work=work $(GHDL_OPT) $<
		@mkdir -p $(dir $@) && touch $@


